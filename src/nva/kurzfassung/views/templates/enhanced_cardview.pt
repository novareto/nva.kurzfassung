<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="example.conference">
<body>
<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">

      <div tal:define="results view/contentlist;
           Batch python:modules['plone.batching'].Batch;
           b_size python:5;b_start python:0;b_start request/b_start | b_start;
           batch python:Batch(results, b_size, int(b_start), orphan=0);">

        <div class="row">
          <span class="col-sm12 col-xs-12" tal:content="structure provider:plone.abovecontenttitle" />
        </div>

        <div class="row">
          <h1 class="col-sm-12 col-xs-12" tal:content="view/mytitle"/>
        </div>

        <div class="row">
          <span class="col-sm-12 col-xs-12" tal:content="structure provider:plone.belowcontenttitle" />
        </div>

        <div class="row" tal:condition="view/mydesc">
          <div id="parent-fieldname-description" class="col-sm-12 col-xs-12 documentDescription" tal:content="view/mydesc"/>
        </div>

        <div class="row">
          <span class="col-sm-12 col-xs-12" tal:content="structure provider:plone.abovecontentbody" />
        </div>

        <div class="row" tal:condition="view/myhtml">
          <div class="col-sm-12 col-xs-12" tal:content="structure view/myhtml"/>
        </div>

        <div class="row" tal:condition="not:results" tal:content="view/emptymessage"/>

        <div class="row" tal:repeat="sublist view/cardlist">

          <div class="col-sm-12 col-xs-12">
            <div tal:repeat="item sublist" class="col-sm-6 col-xs-12">

              <div tal:condition="not:item/video" class="media">
                <hr class="media-default" />
                <a href="" tal:attributes="href item/url">
                  <div style="margin-bottom:20px;" class="col-sm-12 col-xs-12">
                    <img tal:condition="item/image" src="" alt="" class="media-object img-responsive"
                      tal:replace="structure item/image"/>
                  </div>
                  <div class="col-sm-12 col-xs-12">
                    <h3 class="newsDescription video-view-description" tal:content="item/title"></h3>
                    <p class="tileBody">
                      <span class="description" tal:content="item/description"/>
                    </p>
                  </div>
                </a>
              </div>

              <div tal:condition="item/video" class="media video-view">
                <hr class="media-default" />
                <div style="margin-bottom:20px;" tal:define="video item/video" tal:condition="video/src" class="col-sm-12 col-xs-12">
                  <div class="video-wrapper">
                    <video width="640" height="360" style="width: 100%; height: 100%;" controls>
                      <source type="video/youtube" tal:attributes="src video/src;type video/videotype"/>
                    </video>
                  </div>
                </div>
                <div style="margin-bottom:20px;" tal:define="video item/video" tal:condition="video/embed" class="col-sm-12 col-xs-12">
                  <span tal:replace="structure video/embed"/>
                </div>
                <div class="col-sm-12 col-xs-12">
                  <h3 class="newsDescription video-view-description" tal:content="item/title"></h3>
                  <p class="tileBody">
                    <span class="description" tal:content="item/description"/>
                  </p>
                </div>
              </div>

            </div>
          </div>

        </div>

        <div class="row">
          <span class="row" tal:content="structure provider:plone.belowcontentbody" />
        </div>

      </div>

    </tal:main-macro>
</metal:main>
</body>
</html>
